{
  "name": "react-native-factory-toast",
  "version": "1.8.8",
  "description": "üçû This module is about displaying Toasts in React Native.",
  "main": "./dist\\module\\index.js",
  "types": "dist/module/react-native-toast-lite.d.ts",
  "scripts": {
    "clean": "if exist dist (rimraf dist) && if exist dist\\module (rimraf dist\\module\\**\\*.js.map)",
    "build": "npm run clean && bob build && tsc && copy types\\react-native-toast-lite.d.ts dist\\module\\ && copy types\\toastTypes.d.ts dist\\module\\",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npm run clean && bob build && tsc && copy types\\react-native-toast-lite.d.ts dist\\module\\ && copy types\\toastTypes.d.ts dist\\module\\",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/module/index.js",
      "limit": "5 KB"
    }
  ],
  "keywords": [
    "react-native",
    "toast",
    "react-native-toast",
    "notification",
    "alert",
    "message"
  ],
  "author": "Gabriel-Soliz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gabriel117343/React-native-factory-toast.git"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": "^0.74.3",
    "react-native-reanimated": "^3.10.1",
    "react-native-svg": "^15.5.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-typescript": "^7.24.7",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3",
    "react-native-builder-bob": "^0.30.0",
    "rimraf": "^6.0.1",
    "size-limit": "^11.1.4",
    "typescript": "^5.5.4"
  },
  "source": "./src\\index.js",
  "module": "./dist\\module\\index.js",
  "exports": {
    ".": "./dist/module/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!dist/module/**/*.js.map",
    "!dist/components/**",
    "!dist/store/**"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist/",
    "targets": [
      [
        "module",
        {
          "esm": true,
          "sourceMaps": false
        }
      ]
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "private": false,
  "bugs": {
    "url": "https://github.com/Gabriel117343/React-native-factory-toast/issues"
  },
  "homepage": "https://github.com/Gabriel117343/React-native-factory-toast#readme",
  "directories": {
    "test": "test"
  }
}
